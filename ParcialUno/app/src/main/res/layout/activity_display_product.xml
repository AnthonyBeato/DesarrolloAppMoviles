<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DisplayProductActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/productThumbnail"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/titleTextView"
            app:layout_constraintStart_toEndOf="@+id/productThumbnail" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:textSize="24sp"
            android:textStyle="bold"/>
    <TextView
            android:text="Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/descriptionTextView"
            app:layout_constraintStart_toEndOf="@+id/productThumbnail" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView" android:layout_marginTop="8dp"
            android:textSize="16sp"/>
    <TextView
            android:text="Price"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/priceTextView"
            app:layout_constraintStart_toEndOf="@+id/productThumbnail" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
            android:textStyle="italic" android:layout_marginTop="8dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" app:layout_constraintTop_toBottomOf="@+id/productThumbnail"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:id="@+id/discountPercentageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descuento: "/>

        <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: "/>

        <TextView
                android:id="@+id/stockTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock: "/>

        <TextView
                android:id="@+id/brandTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca: "/>

        <TextView
                android:id="@+id/categoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CategorÃ­a: "/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>