<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:minHeight="60dp"
        app:cardElevation="6dp"
        android:id="@+id/CardView"
        android:layout_margin="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox_Title_RV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/importanceIconRV"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"/>

            <ImageView
                    android:src="@drawable/baseline_brightness_1_24"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:id="@+id/importanceIconRV"
                    app:layout_constraintStart_toEndOf="@+id/checkBox_Title_RV"
                    app:layout_constraintEnd_toStartOf="@+id/btn_delete_RV"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="14dp"
                    android:scaleType="centerInside" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="14dp"/>

            <ImageButton
                    android:src="@drawable/baseline_delete_24"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:id="@+id/btn_delete_RV"
                    android:backgroundTint="#00FFFFFF"
                    app:tint="#E53935"
                    app:layout_constraintStart_toEndOf="@+id/importanceIconRV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Agregar más vistas aquí si es necesario -->

    </LinearLayout>
</androidx.cardview.widget.CardView>
